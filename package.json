{
  "name": "react-xstream-store",
  "version": "0.0.0-development",
  "description": "A ReactJS state provider and connector for xstream-store",
  "main": "index.js",
  "scripts": {
    "changelog":
      "conventional-changelog --infile CHANGELOG.md --same-file --release-count 0 --preset angular",
    "commit": "git-cz",
    "compile": "tsc",
    "predist": "rm -rf dist/ && mkdirp dist/ && npm run compile",
    "dist":
      "browserify index.js --standalone xstream-store --external xstream > dist/xstream-store.js",
    "postdist": "uglifyjs dist/xstream-store.js -o dist/xstream-store.min.js",
    "lint": "tslint src/**/*.ts -t verbose -t stylish",
    "watch:lint": "chokidar src/**/*.ts -c \"npm run lint\" --initial",
    "semantic-release": "semantic-release",
    "test": "jest",
    "watch:test": "jest --watch",
    "travis-deploy-once": "travis-deploy-once"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/larrybotha/react-xstream-store.git"
  },
  "keywords": ["reactjs", "xstream"],
  "author": "Larry Botha",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/larrybotha/react-xstream-store/issues"
  },
  "devDependencies": {
    "@types/jest": "^22.2.3",
    "browserify": "^16.2.2",
    "chokidar": "^2.0.3",
    "chokidar-cli": "^1.2.0",
    "commitizen": "^2.10.1",
    "conventional-changelog": "^2.0.0",
    "conventional-changelog-cli": "^2.0.0",
    "cz-conventional-changelog": "^2.1.0",
    "ghooks": "^2.0.4",
    "jest": "^23.0.1",
    "prettier": "^1.13.4",
    "semantic-release": "^15.5.0",
    "travis-deploy-once": "^5.0.0",
    "ts-jest": "^22.4.6",
    "ts-node": "^6.0.5",
    "tslint": "^5.10.0",
    "tslint-config-prettier": "^1.13.0",
    "tslint-eslint-rules": "^5.3.1",
    "tslint-plugin-prettier": "^1.3.0",
    "tslint-react": "^3.6.0",
    "typescript": "^2.8.3"
  },
  "peerDependencies": {
    "xstream": "^11.4.0",
    "xstream-store": "^1.0.2",
    "react": "^16.4.0"
  },
  "homepage": "https://github.com/larrybotha/react-xstream-store#readme",
  "config": {
    "commitizen": {
      "path": "node_modules/cz-conventional-changelog"
    }
  }
}
